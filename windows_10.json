{
  "builders": [
    {
      "type": "hyperv-iso",
      "configuration_version": "8.0",
      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "disk_size": "{{user `disk_size`}}",
      "switch_name": "vSwitch",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/fixnetwork.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1"
      ],
      "boot_wait": "6m",
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "skip_compaction": "true",
      "skip_export": "true",
      "communicator": "winrm",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "ContosoAdmin",
      "winrm_password": "Password123",
      "output_directory": "output"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "./scripts/prepare-for-upload-vhd-image.ps1",
        "./scripts/compact.ps1"

      ],
      "type": "powershell"
    }
  ],
  "variables": {
    "autounattend": "./answer_files/Autounattend.xml",
    "disk_size": "32000",
    "cpus": "4",
    "memory": "4096",
    "headless": "false",
    "iso_checksum": "sha256:668FE1AF70C2F7416328AEE3A0BB066B12DC6BBD2576F40F812B95741E18BC3A",
    "iso_url": "https://software-download.microsoft.com/download/sg/17763.107.101029-1455.rs5_release_svc_refresh_CLIENT_LTSC_EVAL_x64FRE_en-us.iso",
    "restart_timeout": "5m",
    "vhv_enable": "false",
    "virtio_win_iso": "~/virtio-win.iso",
    "vm_name": "packer-vm",
    "winrm_timeout": "2h"
  }
}
